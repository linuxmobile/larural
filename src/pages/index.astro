---
import Layout from "@layout/Layout.astro"
import Hero from "@components/Hero.astro";
import Events from "@components/Events.astro";
import RequestEvent from "@components/RequestEvent.astro";
import Ticket from "@components/Ticket.astro";
import Services from "@components/Services.astro";
import LatestArticles from "@components/LatestArticles.astro";

const title = "Rural - Predio Ferial de Buenos Aires"
const description = "Somos el principal predio para la realización de congresos, ferias, convenciones y eventos del país y América Latina"
---

<Layout {title} {description}>
  <Hero />
  <Events />
  <RequestEvent />
  <Ticket />
  <Services />
  <div class="relative">
    <LatestArticles />
    <div class="absolute bottom-1/3 inset-x-0 flex items-center justify-center bg-rural-red/10 w-full h-56 z-10 blur-3xl"></div>
  </div>
</Layout>

